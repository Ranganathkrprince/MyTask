<!doctype html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
<script type="text/javascript">
window.setTimeout(function(){
	$("form").submit();
}, 1); 
</script> 
<body >
 <form name="myForm" th:action="${action}"   method="post">
<input type="hidden" name="firstname"  th:value="${firstname}" />
<input type="hidden" name="lastname" th:value="${lastname}" />
<input type="hidden" name="surl"  th:value="${surl}" />
<input type="hidden" name="phone"  th:value="${phone}"/>
<input type="hidden" name="key"   th:value="${key}"/>
<input type="hidden" name="hash"  th:value="${hash}" />
<input type="hidden" name="curl"   th:value="${curl}"/>
<input type="hidden" name="furl"   th:value="${furl}" />
<input type="hidden" name="txnid"  th:value="${txnid}" />
<input type="hidden" name="productinfo" th:value="${productinfo}" />
<input type="hidden" name="amount"  th:value="${amount}" />
<input type="hidden" name="email"  th:value="${email}" /> 

<input type="hidden" name="udf1"  th:value="${udf1}" /> 
<input type="hidden" name="udf2"  th:value="${udf2}" /> 
<input type="hidden" name="udf3"  th:value="${udf3}" /> 
<input type="hidden" name="udf4"  th:value="${udf4}" /> 
<input type="hidden" name="udf5"  th:value="${udf5}" /> 
</form>    
</body>

</html>